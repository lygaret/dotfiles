#!/bin/sh

# arch keeps system level xinitrc.d/* files
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# keyboard and mouse setup
setxkbmap -variant dvorak -option ctrl:nocaps
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5

# visual themes
xrdb -I$DOTFILES/x11 -load $DOTFILES/x11/xresources

# startup programs
[[ -f "$HOME/.fehbg" ]] && . "$HOME/.fehbg"
$DOTFILES/bin/backlight restore
compton &

/usr/bin/nm-applet &
/usr/bin/dropbox &
/usr/bin/spotify &
/usr/bin/pidgin &

# session stuff
# - systray, applets, copy.com, etc.
# - ssh-agent?
# - polkit?

redshift -b 1.0:0.7 -l 40:-105 &
xrandr --output VGA1 --mode 1920x1080 --above LVDS1

# sxhkd &
# exec bspwm
exec i3
#exec awesome
